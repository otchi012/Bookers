<p class="notice">
  <%= notice %>
</p>

<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %><br>
    <%= f.submit 'Update Book' %>
  <% end %>
<p class="links">
  <%= link_to "Show", book_path(@book) %>
  <span> | </span>
  <%= link_to "Back", books_path %>
</p>